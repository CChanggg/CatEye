.movie {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.f-name {
  display: flex;
  flex-direction: row;
  text-align: center;
  height: 23px;
  line-height: 20px;
}

.threeD {
  border: solid 1px lightgrey;
  background-color: limegreen;
  border-radius: 10rpx;
  color: white;
  font-weight: bold;
  padding: 5rpx 10rpx;
  margin-left: 20rpx;
  font-size: 10pt;
  text-align: center;
}

.choose {
  color: red;
}

.card {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 1px;
  background-color: white;
  padding: 5px;
  line-height: 40px;
}

.info {
  display: flex;
  flex-direction: column;
  width: 150px;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: break-all;
  /*padding-top: 10px;*/
  padding-left: 10px;
}

.info_item {
  height: 95rpx;
}

.buy {
  height: 80rpx;
  color: red;
  background-color: white;
  text-align: center;
  font-size: 30rpx;
  border: solid 1rpx red;
}

.body {
  display: flex;
  flex-direction: column;
  background-color: lightgrey;
}

